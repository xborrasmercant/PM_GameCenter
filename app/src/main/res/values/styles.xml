<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/background_orange_corners</item>

        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/verdana</item>
        <item name="android:textColor">@color/orange_neon</item>
        <item name="android:textSize">25dp</item>

        <item name="android:shadowColor">@color/orange_neon</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:padding">16dp</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="DestructiveButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/background_red</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="OliveBackgroundStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/background_olive</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="LeaderboardTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_olive</item>
        <item name="android:padding">8dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">@font/verdana_bold</item>


        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="LeaderboardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/dim_black</item>
    </style>

    <style name="LeaderboardCardBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/background_white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="LeaderboardCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


    <style name="ScoreboxBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_olive</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ScoreboxText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>

        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="TimerBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/background_orange</item>

        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35dp</item>

        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="OrangeNeonButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>

        <item name="android:background">@drawable/background_orange_corners</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/orange_neon</item>

        <item name="android:shadowColor">@color/orange_neon</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="GameCardBackgroundStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/background_olive</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="GameCardTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="BasicTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>


        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="PopupTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/popup_title</item>

        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36dp</item>

        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="PopupTitleDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/popup_description</item>

        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>

        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="GameBlockStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@color/tier1_1</item>
        <item name="android:fontFamily">@font/verdana</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="ScoreBoxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@color/tier1_1</item>
        <item name="android:fontFamily">@font/baloo_bhai_2_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>


    <style name="FooterButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/baloo_bhai_2_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>


</resources>