<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/default_button</item>
        <item name="android:textColor">@color/orange_neon</item>
        <item name="android:shadowColor">@color/orange_neon</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="PopupTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/popup_title</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">42dp</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="PopupTitleDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/popup_description</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="GameBlockStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@color/tier1_1</item>
        <item name="android:fontFamily">@font/baloo_bhai_2_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="ScoreBoxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@color/tier1_1</item>
        <item name="android:fontFamily">@font/baloo_bhai_2_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>


    <style name="FooterButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/baloo_bhai_2_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:shadowColor">@color/shadowColor</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>


</resources>